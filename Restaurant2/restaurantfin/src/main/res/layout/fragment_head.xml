<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mine"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/soup"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@mipmap/soup" />

            <ImageButton
                android:id="@+id/meat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@mipmap/meat" />

            <ImageButton
                android:id="@+id/vegetable"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@mipmap/vegetable" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/combo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@mipmap/combo" />

            <ImageButton
                android:id="@+id/noodle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:layout_marginRight="40dp"
                android:background="@mipmap/noodle" />

            <!--<ImageButton-->
                <!--android:id="@+id/drunk"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="80dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@mipmap/drunk" />-->
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="--------------热门推荐--------------"
        android:textSize="18sp" />
</RelativeLayout>